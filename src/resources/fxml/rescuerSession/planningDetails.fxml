<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.web.WebView?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.rescuerSession.PlanningDetailsController">
    <!-- Barre latérale "base" -->
    <top>
        <VBox>
            <HBox alignment="CENTER_LEFT" prefHeight="60.0" spacing="20.0" style="-fx-background-color: #BB2F15;">
                <Button fx:id="logoButton" contentDisplay="GRAPHIC_ONLY" minWidth="100.0" onAction="#goHome" prefWidth="100.0" style="-fx-background-color: transparent;">
                    <graphic>
                        <ImageView fx:id="ButtonAction" fitHeight="50.0" fitWidth="66.0" preserveRatio="true">
                            <image>
                                <Image url="@../../images/logo_blanc.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Pane HBox.hgrow="ALWAYS" />
                <Button fx:id="logOutButton" contentDisplay="GRAPHIC_ONLY" onAction="#logOut" style="-fx-background-color: transparent;">
                    <graphic>
                        <ImageView fx:id="buttonLogOut" fitHeight="50.0" fitWidth="35.0" preserveRatio="true">
                            <image>
                                <Image url="@../../images/quit.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            </HBox>

            <HBox alignment="CENTER_LEFT">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </padding>
                <Button fx:id="returnButton" contentDisplay="GRAPHIC_ONLY" onAction="#returnToPrevious" style="-fx-background-color: transparent;">
                    <graphic>
                        <ImageView fx:id="buttonReturn" fitHeight="30.0" fitWidth="30.0" preserveRatio="true">
                            <image>
                                <Image url="@../../images/retour.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Pane HBox.hgrow="ALWAYS" />
            </HBox>
        </VBox>
    </top>

    <!--  Info au centre  -->
    <center>
        <VBox alignment="TOP_CENTER" spacing="20.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="40.0" />
            </padding>

            <Label fx:id="titreLabel" style="-fx-font-size: 26px; -fx-font-weight: bold;" text="[Titre]" />
            <VBox alignment="CENTER" spacing="5.0">
                <Label fx:id="dateHoraireLabel" style="-fx-font-size: 20px;" text="[Date / Horaire]" />
                <Pane maxWidth="400.0" prefHeight="2.0" style="-fx-background-color: #D96B56;" />
            </VBox>

            <HBox alignment="CENTER" spacing="40.0">
                <!-- Maps -->
                <VBox alignment="CENTER_LEFT" spacing="10.0">
                    <Label style="-fx-font-size: 16px;" text="Point de rendez-vous :" />
                    <WebView fx:id="mapWebView" prefHeight="180.0" prefWidth="250.0" />
                    <Label fx:id="coordLabel" text="[Coordonnées GPS]" />
                </VBox>

                <!-- Note "A savoir" -->
                <VBox alignment="TOP_LEFT" prefWidth="250.0" spacing="0.0" style="-fx-border-color: black; -fx-border-width: 1;">
                    <Label maxWidth="Infinity" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-background-color: #F08080; -fx-padding: 4;" text="Note à savoir :" />
                    <Label fx:id="noteTexte" style="-fx-padding: 8;" text="[Note]" wrapText="true" />
                </VBox>
            </HBox>
        </VBox>
    </center>
</BorderPane>
